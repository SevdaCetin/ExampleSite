@model ExampleSite.Models.OrderDetails
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="span12">

        <div class="well well-small">

            <table class="table table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Sipariş ID</th>
                        <th>Sipariş Numarası</th>
                        <th>Sipariş Tarihi</th>
                        <th>Toplam Tutar </th>
                        <th>Sipariş durumu</th>
                        <th>Adres</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Id</td>
                        <td>@Model.OrderNumber</td>
                        <td>@Model.OrderDate</td>
                        <td>@Model.Total</td>
                        <td>
                            @if (Model.OrderState == ExampleSite.Entity.OrderState.Bekleniyor)
                            {
                                <a class="btn btn-danger">Sipariş Oluşturuluyor</a>
                            }
                            else if (Model.OrderState == ExampleSite.Entity.OrderState.Kargolandı)
                            {
                                <a class="btn btn-primary">Sipariş Kargolandı</a>
                            }
                            else if (Model.OrderState == ExampleSite.Entity.OrderState.Paketlendı)
                            {
                                <a class="btn btn-info">Sipariş Paketlendi</a>
                            }
                            else if (Model.OrderState == ExampleSite.Entity.OrderState.Tamamlandı)
                            {
                                <a class="btn btn-success">Sipariş Tamamlandı</a>
                            }
                        </td>
                        <td>
                            @Model.Adres <br />
                            @Model.Sehir <br />
                            @Model.Semt <br />
                            @Model.Mahalle <br />
                            @Model.Postakodu <br />
                        </td>
                    </tr>


                </tbody>
            </table> <br />
            <table class="table table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Resim </th>
                        <th>Ürün Adı</th>
                        <th>Toplam Tutar </th>
                        <th>Adet</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        @foreach (var item in Model.OrderLines)
                        {
                            <td><img src="~/Content/image/@item.image" width="75" height="75" /></td>
                            <td>@item.ProductName</td>
                            <td>@item.Price</td>
                            <td>@item.Quantity</td>
                            <td><a href="/Home/ProductDetails/@item.ProductId" class="btn btn-success" target="_blank">Ürün Detay </a></td>

                        }

                    </tr>


                </tbody>
            </table>


        </div>
    </div>
</div>

