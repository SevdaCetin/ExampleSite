@model ExampleSite.Entity.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="content">
    <h2 style="padding: 8px 8px 8px 8px">
        Kategori Sil
    </h2>
    <h4 style="padding: 8px 8px 8px 8px;">  Silmek istediğinizden emin misiniz?</h4>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Kategori Adı:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                Açıklama:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color" style="padding: 8px 8px 8px 8px;">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Kategori Listesi", "Index", null, new { @class = "btn btn-primary" })

            </div>
        }
    </div>
    </section>