@model IEnumerable<ExampleSite.Entity.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">


            <div class="box">
                <h2 style="padding: 8px 8px 8px 8px; text-decoration:double">
                    Kategori Listesi
                </h2><!-- /.box-header -->
            <hr />
            <p style="padding:5px 5px 5px 5px">
                 <a class="btn btn-primary" href="@Url.Action("Create")">Yeni Kayıt</a>
            </p>
            
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped" >
                        <thead>
                            <tr>
                                <th>Kategori</th>
                                <th>Açıklama</th>
                                <th></th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>
                                       @item.Description
                                    </td>
                                    <td><a class="btn btn-warning" href="@Url.Action("Edit",new { id=item.Id})"><i class="fa fa-fw fa-edit"></i>Düzenle</a></td>
                                    <td> <a class="btn btn-danger" href="@Url.Action("Delete",new { id=item.Id})"><i class="fa fa-fw fa-trash-o"></i>Sil</a></td>
                                    
                                </tr>
                            }


                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Kategori</th>
                                <th>Açıklama</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>
