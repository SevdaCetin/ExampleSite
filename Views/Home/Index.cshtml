@using ExampleSite.Entity
@model IEnumerable<Product>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div id="sidebar" class="span3">
        <div class="well well-small">
            <ul class="nav nav-list">
                @Html.Action("_CategoryList", "Category")
                <li style="border:0"> &nbsp;</li>
                @Html.Action("Summary","Cart")
            </ul>
        </div>


        @Html.Action("_FeaturedProductList", "Home")

    </div>
    <div class="span9">
        <div class="well np">
            @Html.Action("Slider", "Home")
        </div>
        <!--
        New Products
        -->
        <div class="well well-small">
            <h3>Ürünler </h3>
            <hr class="soften" />

            <div class="row-fluid">
                <ul class="thumbnails">
                    @foreach (var item in Model)
                    {
                        <li class="span4">
                            <div class="thumbnail">


                                <a href="/Home/Product.Details/@item.Id"><img src="~/Content/image/@item.image" alt=""></a>
                                <div class="caption cntr">
                                    <p>@item.Name</p>
                                    <p><strong> @item.Price ₺</strong></p>
                                    <h4><a class="shopBtn" href="/Home/ProductDetails/@item.Id" title="add to cart"> Görüntüle </a></h4>
                                    <br class="clr">
                                </div>
                            </div>
                        </li>
                    }


                </ul>
            </div>
        </div>
        <!--
        Featured Products
        -->



    </div>
</div>

<section class="our_client">
    <hr class="soften" />
    <h4 class="title cntr"><span class="text">Manufactures</span></h4>
    <hr class="soften" />
    <div class="row">
        <div class="span2">
            <a href="#"><img alt="" src="~/Site/assets/img/1.png"></a>
        </div>
        <div class="span2">
            <a href="#"><img alt="" src="~/Site/assets/img/2.png"></a>
        </div>
        <div class="span2">
            <a href="#"><img alt="" src="~/Site/assets/img/3.png"></a>
        </div>
        <div class="span2">
            <a href="#"><img alt="" src="~/Site/assets/img/4.png"></a>
        </div>
        <div class="span2">
            <a href="#"><img alt="" src="~/Site/assets/img/5.png"></a>
        </div>
        <div class="span2">
            <a href="#"><img alt="" src="~/Site/assets/img/6.png"></a>
        </div>
    </div>
</section>

