@using ExampleSite.Entity
@model IEnumerable<Product>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div id="sidebar" class="span3">
        <div class="well well-small">
            <ul class="nav nav-list">
                @Html.Action("_CategoryList", "Category")
                <li style="border:0"> &nbsp;</li>
                @Html.Action("Summary", "Cart")
            </ul>
        </div>


        @Html.Action("_FeaturedProductList", "Home")

    </div>
    <div class="span9">
        <!--
        New Products
        -->
        <div class="well well-small">
            <h3> Ürünler </h3>
            <div class="row-fluid">
                <ul class="thumbnails">
                    @foreach (var item in Model)
                    {
                        <li class="span4">
                            <div class="thumbnail">
                                <a href="/Home/ProductDetail/@item.Id"><img src="~/Content/image/@item.image" alt=""></a>
                                <div class="caption cntr">
                                    <p>@item.Name</p>
                                    <p><strong> @item.Price ₺</strong></p>
                                    <h4><a class="shopBtn" href="/Home/ProductDetail/@item.Id" title="add to cart"> Görüntüle </a></h4>

                                    <br class="clr">
                                </div>
                            </div>
                        </li>
                    }


                </ul>
            </div>


        </div>
    </div>
</div>
