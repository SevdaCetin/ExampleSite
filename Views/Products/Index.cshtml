@model IEnumerable<ExampleSite.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<section class="content">
    <div class="row">
        <div class="col-xs-12">


            <div class="box">
                <h2 style="padding: 8px 8px 8px 8px; text-decoration:double">
                    Ürün Listesi
                </h2><!-- /.box-header -->
                <hr />
                <p style="padding:5px 5px 5px 5px">
                    <a class="btn btn-primary" href="@Url.Action("Create")">Yeni Kayıt</a>
                </p>

                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Ürün Adı</th>
                                <th>Kategori Adı</th>
                                <th>Onay</th>
                                <th>Anasayfa</th>
                                <th>Popüler</th>
                                <th></th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="text-align:center"><img src="~/Content/image/@item.image" width="60" , height="60"></td>
                                    <td>@item.Name</td>
                                    <td>@item.Category.Name</td>
                                    <td style="text-align:center">
                                        @if (item.IsApproved)
                                        {
                                            <label class="label label-success"><i class="fa fa-fw fa-check-circle-o"></i> </label>
                                        }
                                        else
                                        {
                                            <label class="label label-danger"><i class="fa fa-fw fa-times-circle"></i> </label>
                                        }
                                    </td>
                                    <td style="text-align:center"> @if (item.IsHome)
                                        {
                                            <label class="label label-success"><i class="fa fa-fw fa-check-circle-o"></i> </label>
                                        }
                                        else
                                        {
                                            <label class="label label-danger"><i class="fa fa-fw fa-times-circle"></i> </label>
                                        }
                                    </td>
                                    <td style="text-align:center">
                                        @if (item.IsFeatured)
                                        {
                                            <label class="label label-success"><i class="fa fa-fw fa-check-circle-o"></i> </label>
                                        }
                                        else
                                        {
                                            <label class="label label-danger"><i class="fa fa-fw fa-times-circle"></i> </label>
                                        }
                                    </td>
                                    <td style="text-align:center" ><a class="btn btn-warning" href="@Url.Action("Edit",new { id=item.Id})"><i class="fa fa-fw fa-edit"></i>Düzenle</a></td>
                                    <td style="text-align:center"> <a class="btn btn-danger" href="@Url.Action("Delete",new { id=item.Id})"><i class="fa fa-fw fa-trash-o"></i>Sil</a></td>

                                </tr>
                            }


                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Ürün Resim</th>
                                <th>Ürün Adı</th>
                                <th>Kategori Adı</th>
                                <th>Onay</th>
                                <th>Anasayfa</th>
                                <th>Popüler</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>


